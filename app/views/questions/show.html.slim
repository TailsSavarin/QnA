.row-justify-content-center
  .col-md-12
    = link_to 'Ask Question', new_question_path, class: 'btn btn-primary float-md-right mt-3'
    .question
      = render @question

    h4 Links
    .question-links
      = render @question.links

    h3 Answers:
    .answers
      = render @question.answers

    = render 'answers/form'

    = link_to 'Back', questions_path
