$('#new-comment-<%= "#{@comment.commentable.class.name.downcase}-#{@comment.commentable.id}" %>-errors').html('<%= render 'shared/errors', resource: @comment %>');

<% if @comment.persisted? %>
  $('#<%= "#{@comment.commentable.class.name.downcase}-#{@comment.commentable.id}" %>-comments').append('<%= j render @comment %>');
  $('form#new-comment-<%= "#{@comment.commentable.class.name.downcase}-#{@comment.commentable.id}" %>')[0].reset();
  $('form#new-comment-<%= "#{@comment.commentable.class.name.downcase}-#{@comment.commentable.id}" %>').hide();
  $('.add-comment').show();
<% end %>


