.row.justify-content-center.mt-4
  .col.col-md-4
    .logo.text-center
      = link_to image_tag('qna-logo.png', alt: 'qna', width: 112, height: 102), root_path
    .oauth.mb-2
      = render 'devise/shared/links_oauth'
    .card.shadow-lg.p-3.mb-5.bg-white.rounded
      .card-body
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-group
            .email.mb-2
              strong= f.label :email
              = f.email_field :email, class: 'form-control', autofocus: true, autocomplete: 'email'
            .password.mb-2
              strong= f.label :password
              small.float-right
                = render 'devise/shared/links_password'
              = f.password_field :password, class: 'form-control', autocomplete: 'current-password'
            - if devise_mapping.rememberable?
              .form-check
                = f.label :remember_me, class: 'form-check-input' do
                  = f.check_box :remember_me, class: 'form-check-label'
                  |  Remember me
            = f.submit 'Log in', class: 'btn-session'
    .links.text-center
      = render 'devise/shared/links'
